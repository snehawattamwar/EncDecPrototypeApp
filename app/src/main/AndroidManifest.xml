<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.encdec">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.encdcr.activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.encdcr.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.encdcr.activity.DecryptionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.encdcr.activity.EncryptionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.encdcr.activity.FileChooserActivityNew"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.encdcr.activity.TextViewActivity"
            android:label="@string/title_activity_text_view" >
        </activity>
        <activity
            android:name="com.encdcr.activity.ImageViewActivity"
            android:label="@string/title_activity_image_view" >
        </activity>
    </application>

</manifest>
