<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:color">#000000</item>
    </style>
	
	<style name="MenuColors">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/background_dark</item>
        <!-- <item name="android:src">@drawable/orangebackground</item> -->
    </style>

	<style name="ListViewColors">
        <item name="android:textColor">#000000</item>
    </style>
	
	<style name="StartScreenColors">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">#1A1A1A</item> -->
        <item name="android:background">@drawable/background_dark</item>
        
    </style>
    
    
	<style name="ButtonStyle">
	
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_width">200dip</item>
	<!-- <item name="android:src">@drawable/button</item> -->
	<item name="android:scaleType">fitXY</item>
    <item name="android:textColor">#000000</item>
    <item name="android:typeface">sans</item>
    <item name="android:background">@null</item> 
    <item name="android:padding">5dip</item>
    <item name="android:adjustViewBounds">true</item>
    </style>
<style name="GridBackGround">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/background_light</item>
        <!-- <item name="android:src">@drawable/orangebackground</item> -->
    </style>
    
	
	<style name="FoodItemBackGround">
        <!-- <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">sans</item> -->
        <item name="android:background">@drawable/image_border</item>
        <!-- <item name="android:src">@drawable/orangebackground</item> -->
        <!-- <item name="android:adjustViewBounds">true</item> -->
        <!-- <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item> -->
    </style>
    
	

	<style name="PictogramButtonStyle">
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_width">85dp</item>
	<!-- <item name="android:src">@drawable/button</item> -->
	<item name="android:scaleType">fitXY</item>
    <item name="android:textColor">#000000</item>
    <item name="android:typeface">sans</item>
    <item name="android:background">@null</item> 
    <item name="android:padding">5dip</item>
    <item name="android:adjustViewBounds">true</item>
    </style>
	
	<style name="EditStyle">
	
    <item name="android:background">@drawable/textbox</item> 
    <item name="android:paddingLeft">7dp</item>
    <item name="android:scaleType">centerInside</item>
    </style>
	<style name="TextStyle">
	
    <item name="android:textColor">#000000</item>
    <item name="android:typeface">sans</item>
    <item name="android:background">@null</item> 
    <item name="android:adjustViewBounds">true</item>
    </style>
    
    
	<style name="SpinnerStyle">
        <item name="android:background">@drawable/dropdown</item>
    </style>
	
</resources>


